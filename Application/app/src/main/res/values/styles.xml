<resources>

    <!-- Light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>
    
    <style name="Theme.Material_Light" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme2" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="Theme.Material_Dark" parent="AppTheme2">
        <item name="android:windowBackground">@drawable/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
